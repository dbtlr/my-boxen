server {
  access_log <%= scope.lookupvar "nginx::config::logdir" %>/<%= @name %>.access.log main;
  listen 80;
  root <%= @repo_dir %>/src/public;
  server_name <%= @server_name %>;

  client_max_body_size 50M;

  error_page 500 502 503 504 /50x.html;
  index index.php index.html;

  location / {
    try_files $uri $uri/ @fastcgi;
  }

  location ~ .+\.php$ {
    location ~ \..*/.*\.php$ { return 400; }
    error_page 418 = @fastcgi;
    return 418;
  }

  location @fastcgi {
    include <%= scope.lookupvar "nginx::config::configdir" %>/fastcgi_params;
    keepalive_timeout 0;
    fastcgi_pass unix:<%= scope.lookupvar "boxen::config::socketdir" %>/<%= @name %>;
    fastcgi_param SCRIPT_FILENAME <%= @repo_dir %>/src/public/index.php;
    fastcgi_param PATH_INFO $fastcgi_script_name;
  }
}
